<div class="navbar navbar-lewagon w-100 position-absolute">
  <div>
    <h1 class="text-white"> Cocktails </h1>
  </div>
  <div>
    <%= link_to "Create new cocktail", new_cocktail_path, class: "btn btn-success text-white float-right" %>
  </div>
</div>

<div class="main-container">
  <div class="d-flex align-items-center h-100 justify-content-around">
    <div class="row row-cols-md-3 w-100 mt-n5">
      <% @cocktails.each do |cocktail| %>
        <div class="col mb-2">
          <div class="card text-white bg-dark border-dark rounded">
            <div class="card-horizontal">
              <%= cl_image_tag cocktail.photo.key, class: "card-img-small rounded" if cocktail.photo.attached? %>
              <div class="card-body d-flex justify-content-center align-items-center">
                <%= link_to cocktail.name, cocktail_path(cocktail), class: "card-title text-white text-#{cocktail.bootstrap_color}" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
