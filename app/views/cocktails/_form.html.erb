<% onchangeEvent = 'let cocktail = document.getElementsByName("cocktail[bootstrap_color]")[0];
                    cocktail.className = "form-control select";
                    cocktail.classList.add(cocktail.options[cocktail.selectedIndex].classList[0]);' %>

<div class="container mt-5">
  <%= simple_form_for(@cocktail) do |f| %>
    <%= f.input :name, label_html: { class: 'text-white' } %>
    <%= f.input :photo, as: :file, label_html: { class: 'text-white' }, label: 'Image URL' %>
    <%= f.input :bootstrap_color,
                label: 'Color',
                label_html: { class: 'text-white' },
                input_html: { class: 'text-primary', 
                              onchange: onchangeEvent },
                collection: [["primary", class: "text-primary"], 
                             ["secondary", class: "text-secondary"], 
                             ["success", class: "text-success"], 
                             ["danger", class: "text-danger"], 
                             ["warning", class: "text-warning"], 
                             ["info", class: "text-info"], 
                             ["dark", class: "text-dark bg-white"]],
                value_method: :second,
                include_blank: false %>
    <%= link_to 'Go Back', root_path, class: "btn btn-primary text-white" %>
    <%= f.submit class: "btn btn-success float-right text-white" %>
  <% end %>
</div>
